// =============================================================================
// ALPHATIC - INCOME TAB COMPONENT
// =============================================================================
// Displays income projections from current portfolio allocation
// Auto-recalculates when portfolio changes
// =============================================================================

import React, { useMemo } from 'react';
import { ETF_UNIVERSE } from '../../data';
import { calculateWeightedYield } from '../../data/etfs';
import { formatCurrency, formatPercent } from '../../utils/formatters';

const IncomeTab = ({ 
  allocation,
  taxableAmount,
  iraAmount,
  rothAmount,
  isValid 
}) => {
  
  // Calculate income projections from current allocation
  const incomeProjection = useMemo(() => {
    if (!allocation || Object.keys(allocation).length === 0) {
      return {
        totalAnnualDividends: 0,
        monthlyDividends: 0,
        weightedYield: 0,
        quarterlyEstimate: 0,
        etfBreakdown: []
      };
    }

    const totalPortfolio = taxableAmount + iraAmount + rothAmount;
    const weightedYield = calculateWeightedYield(allocation);
    
    // Calculate total annual dividends
    const totalAnnualDividends = Object.entries(allocation).reduce((sum, [symbol, weight]) => {
      const etf = ETF_UNIVERSE[symbol];
      if (!etf) return sum;
      
      const etfAmount = totalPortfolio * (weight / 100);
      const annualIncome = etfAmount * (etf.yield / 100);
      return sum + annualIncome;
    }, 0);

    // ETF breakdown
    const etfBreakdown = Object.entries(allocation)
      .map(([symbol, weight]) => {
        const etf = ETF_UNIVERSE[symbol];
        if (!etf) return null;
        
        const etfAmount = totalPortfolio * (weight / 100);
        const annualIncome = etfAmount * (etf.yield / 100);
        
        return {
          symbol,
          name: etf.name,
          weight,
          amount: etfAmount,
          yield: etf.yield,
          annualIncome,
          monthlyIncome: annualIncome / 12,
          taxEfficiency: etf.taxEfficiency
        };
      })
      .filter(Boolean)
      .sort((a, b) => b.annualIncome - a.annualIncome);

    return {
      totalAnnualDividends,
      monthlyDividends: totalAnnualDividends / 12,
      quarterlyEstimate: totalAnnualDividends / 4,
      weightedYield,
      etfBreakdown
    };
  }, [allocation, taxableAmount, iraAmount, rothAmount]);

  // Calculate tax implications
  const taxImplications = useMemo(() => {
    const totalIncome = incomeProjection.totalAnnualDividends;
    
    // Estimate qualified dividend percentage based on tax efficiency
    let qualifiedAmount = 0;
    let ordinaryAmount = 0;
    
    incomeProjection.etfBreakdown.forEach(etf => {
      if (etf.taxEfficiency === 'high') {
        qualifiedAmount += etf.annualIncome * 0.90; // 90% qualified
        ordinaryAmount += etf.annualIncome * 0.10;
      } else if (etf.taxEfficiency === 'medium') {
        qualifiedAmount += etf.annualIncome * 0.70; // 70% qualified
        ordinaryAmount += etf.annualIncome * 0.30;
      } else {
        // Low tax efficiency - mostly ordinary income
        qualifiedAmount += etf.annualIncome * 0.20; // 20% qualified
        ordinaryAmount += etf.annualIncome * 0.80;
      }
    });
    
    // Tax rates (simplified for illustration)
    const qualifiedDividendTax = qualifiedAmount * 0.15; // 15% LTCG rate
    const ordinaryIncomeTax = ordinaryAmount * 0.24; // 24% ordinary rate
    
    const totalTax = qualifiedDividendTax + ordinaryIncomeTax;
    const afterTaxIncome = totalIncome - totalTax;
    
    return {
      qualifiedAmount,
      ordinaryAmount,
      qualifiedDividendTax,
      ordinaryIncomeTax,
      totalTax,
      afterTaxIncome,
      effectiveTaxRate: totalIncome > 0 ? (totalTax / totalIncome) * 100 : 0
    };
  }, [incomeProjection]);

  if (!isValid) {
    return (
      <div className="bg-yellow-900/20 border border-yellow-600/30 rounded-lg p-6">
        <div className="flex items-center gap-3 mb-3">
          <span className="text-3xl">‚ö†Ô∏è</span>
          <h3 className="text-xl font-semibold text-yellow-400">Portfolio Not Complete</h3>
        </div>
        <p className="text-slate-300">
          Please complete your portfolio allocation (must total 100%) to see income projections.
        </p>
        <p className="text-sm text-slate-400 mt-2">
          Go to the <strong>Portfolio Builder</strong> tab to create or load a portfolio.
        </p>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      <h2 className="text-2xl font-bold mb-4">Income Projections</h2>

      {/* Summary Cards */}
      <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div className="bg-gradient-to-br from-green-900/20 to-emerald-900/20 rounded-lg p-4 border border-green-500/30">
          <div className="text-sm text-slate-400 mb-1">Annual Income</div>
          <div className="text-2xl font-bold text-green-400">
            {formatCurrency(incomeProjection.totalAnnualDividends)}
          </div>
          <div className="text-xs text-slate-500 mt-1">
            {formatPercent(incomeProjection.weightedYield)} yield
          </div>
        </div>

        <div className="bg-gradient-to-br from-blue-900/20 to-cyan-900/20 rounded-lg p-4 border border-blue-500/30">
          <div className="text-sm text-slate-400 mb-1">Monthly Income</div>
          <div className="text-2xl font-bold text-blue-400">
            {formatCurrency(incomeProjection.monthlyDividends)}
          </div>
          <div className="text-xs text-slate-500 mt-1">
            {formatCurrency(incomeProjection.quarterlyEstimate)}/quarter
          </div>
        </div>

        <div className="bg-gradient-to-br from-purple-900/20 to-pink-900/20 rounded-lg p-4 border border-purple-500/30">
          <div className="text-sm text-slate-400 mb-1">After-Tax Income</div>
          <div className="text-2xl font-bold text-purple-400">
            {formatCurrency(taxImplications.afterTaxIncome)}
          </div>
          <div className="text-xs text-slate-500 mt-1">
            {formatPercent(taxImplications.effectiveTaxRate)} effective tax
          </div>
        </div>

        <div className="bg-gradient-to-br from-orange-900/20 to-amber-900/20 rounded-lg p-4 border border-orange-500/30">
          <div className="text-sm text-slate-400 mb-1">Total Portfolio</div>
          <div className="text-2xl font-bold text-orange-400">
            {formatCurrency(taxableAmount + iraAmount + rothAmount)}
          </div>
          <div className="text-xs text-slate-500 mt-1">
            {Object.keys(allocation).length} ETFs
          </div>
        </div>
      </div>

      {/* Tax Breakdown */}
      <div className="bg-gradient-to-r from-slate-800/50 to-slate-700/50 rounded-lg p-6 border border-slate-600/30">
        <h3 className="text-lg font-semibold mb-4 text-slate-200">Tax Efficiency Analysis</h3>
        
        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h4 className="text-sm font-semibold text-green-400 mb-3">Income Breakdown</h4>
            <div className="space-y-2 text-sm">
              <div className="flex justify-between">
                <span className="text-slate-400">Qualified Dividends (15% tax):</span>
                <span className="text-slate-200">{formatCurrency(taxImplications.qualifiedAmount)}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-slate-400">Ordinary Income (24% tax):</span>
                <span className="text-slate-200">{formatCurrency(taxImplications.ordinaryAmount)}</span>
              </div>
              <div className="flex justify-between font-semibold border-t border-slate-600 pt-2">
                <span className="text-slate-300">Total Annual Income:</span>
                <span className="text-green-400">{formatCurrency(incomeProjection.totalAnnualDividends)}</span>
              </div>
            </div>
          </div>

          <div>
            <h4 className="text-sm font-semibold text-orange-400 mb-3">Tax Impact</h4>
            <div className="space-y-2 text-sm">
              <div className="flex justify-between">
                <span className="text-slate-400">Tax on Qualified:</span>
                <span className="text-slate-200">{formatCurrency(taxImplications.qualifiedDividendTax)}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-slate-400">Tax on Ordinary:</span>
                <span className="text-slate-200">{formatCurrency(taxImplications.ordinaryIncomeTax)}</span>
              </div>
              <div className="flex justify-between font-semibold border-t border-slate-600 pt-2">
                <span className="text-slate-300">After-Tax Income:</span>
                <span className="text-purple-400">{formatCurrency(taxImplications.afterTaxIncome)}</span>
              </div>
            </div>
          </div>
        </div>

        <div className="mt-4 p-3 bg-blue-900/20 rounded border border-blue-600/30">
          <div className="text-xs text-slate-400">
            <strong>Note:</strong> Tax calculation based on ETF tax efficiency ratings. Assumes 15% qualified dividend rate and 24% ordinary income rate. 
            Actual taxes depend on your total income, filing status, and state taxes.
          </div>
        </div>
      </div>

      {/* ETF Breakdown */}
      <div className="bg-slate-800/50 rounded-lg p-6 border border-slate-600/30">
        <h3 className="text-lg font-semibold mb-4 text-slate-200">Income by Holding</h3>
        
        <div className="space-y-2">
          {incomeProjection.etfBreakdown.map((etf) => (
            <div key={etf.symbol} className="bg-slate-700/50 rounded p-4">
              <div className="flex justify-between items-start mb-2">
                <div>
                  <div className="font-semibold text-blue-400">{etf.symbol}</div>
                  <div className="text-xs text-slate-400">{etf.name}</div>
                </div>
                <div className="text-right">
                  <div className="font-semibold text-green-400">{formatCurrency(etf.annualIncome)}/year</div>
                  <div className="text-xs text-slate-400">{formatCurrency(etf.monthlyIncome)}/month</div>
                </div>
              </div>
              
              <div className="grid grid-cols-4 gap-2 text-xs text-slate-400 mt-2 pt-2 border-t border-slate-600">
                <div>
                  <span className="text-slate-500">Weight: </span>
                  <span className="text-slate-300">{formatPercent(etf.weight)}</span>
                </div>
                <div>
                  <span className="text-slate-500">Amount: </span>
                  <span className="text-slate-300">{formatCurrency(etf.amount)}</span>
                </div>
                <div>
                  <span className="text-slate-500">Yield: </span>
                  <span className="text-slate-300">{formatPercent(etf.yield)}</span>
                </div>
                <div>
                  <span className="text-slate-500">Tax: </span>
                  <span className={`${
                    etf.taxEfficiency === 'high' ? 'text-green-400' :
                    etf.taxEfficiency === 'medium' ? 'text-yellow-400' :
                    'text-red-400'
                  }`}>
                    {etf.taxEfficiency}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      {/* Income Strategy Tips */}
      <div className="bg-blue-900/20 border border-blue-600/30 rounded-lg p-4">
        <h4 className="font-semibold text-blue-400 mb-3">üí° Income Optimization Strategies</h4>
        <div className="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-slate-300">
          <div>
            <div className="font-semibold mb-2">For Higher Income:</div>
            <ul className="space-y-1 text-xs list-disc list-inside">
              <li>Increase allocation to high-dividend ETFs (SCHD, VYM, HDV)</li>
              <li>Consider covered call ETFs (JEPI, JEPQ) for 7-9% yields</li>
              <li>Add preferred stock ETFs (PFF, PFFD) for 6-7% yields</li>
              <li>Include REIT exposure (VNQ) in tax-advantaged accounts</li>
            </ul>
          </div>
          <div>
            <div className="font-semibold mb-2">For Tax Efficiency:</div>
            <ul className="space-y-1 text-xs list-disc list-inside">
              <li>Hold high-dividend ETFs in taxable (qualified treatment)</li>
              <li>Keep covered calls and REITs in IRA (ordinary income)</li>
              <li>Maximize qualified dividend percentage (15% vs 24% tax)</li>
              <li>Consider municipal bonds for taxable accounts</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  );
};

export default IncomeTab;
